<section style="background-color: #ccd2db; padding: 20px;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-xl-6">
                <div class="card" style="border-radius: 8px;">
                    <div class="card-header text-center">
                        <h1 class="text-black mb-3"><u>Slot Details</u></h1>
                    </div>

                    <div class="card-body">
                        <form>
                            <!-- Name Field -->
                            <div class="mb-4">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" id="name" class="form-control" placeholder="Full Name" required />
                            </div>

                            <!-- Email Field -->
                            <div class="mb-4">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" class="form-control" placeholder="example@example.com" required />
                            </div>

                            <!-- Description Field -->
                            <div class="mb-4">
                                <label for="description" class="form-label">Description</label>
                                <textarea id="description" class="form-control" rows="3" placeholder="Inspection Request Details" required></textarea>
                            </div>

                            <!-- File Upload Field -->
                            <div class="mb-4">
                                <label for="upload" class="form-label">Upload</label>
                                <input type="file" id="upload" class="form-control" />
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Send Email</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

